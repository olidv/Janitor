<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="${basedir}\Logs\janitor-internal.log"
      internalLogLevel="Info" >

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file -->
    <target xsi:type="File" name="logfile" fileName="${basedir}\Logs\janitor.log" archiveEvery="Day" maxArchiveDays="32"
            layout="${longdate} ${pad:padding=5:inner=${level:uppercase=true}} [Thread-${threadid}] ${callsite}&lt;${callsite-linenumber}&gt;  ${message}" />
    
    <target xsi:type="Console" name="logconsole"
            layout="${longdate} ${pad:padding=5:inner=${level:uppercase=true}} [Thread-${threadid}] ${callsite}&lt;${callsite-linenumber}&gt;  ${message}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Trace" writeTo="logfile" />
  </rules>
</nlog>
